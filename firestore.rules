rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Katalog görselleri için kurallar
    match /catalogs/{document} {
      // Herkes okuyabilir (katalog sayfası için)
      allow read: if true;
      // Sadece kimlik doğrulaması yapılmış kullanıcılar yazabilir (admin sayfası için)
      allow write: if request.auth != null;
    }
    
    // İletişim formu için kurallar
    match /contact/{document} {
      // Herkes yazabilir (iletişim formu için)
      allow create: if true;
      // Sadece kimlik doğrulaması yapılmış kullanıcılar okuyabilir (admin sayfası için)
      allow read: if request.auth != null;
    }
  }
}
